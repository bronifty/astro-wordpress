---
// component import
import HeadLayout from "./HeadLayout.astro";
import Footer from "../components/Footer.astro";

// styles import
import "../styles/global.css";

export interface Props {
  title: string;
  description?: string;
}
const { title = "Blog", description = "Codes and Life" } = Astro.props as Props;
---

<html lang="en">
  <HeadLayout {title} {description} />
  <body>
    <slot>Default Text</slot>

    <Footer />
  </body>
</html>
