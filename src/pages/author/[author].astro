export async function getStaticPaths() {
  const allPosts = await getCollection("blog");
  const formattedPosts = formatBlogPosts(allPosts);
  return formattedPosts.map((post) => ({
    params: { author: slugify(post.data.author) },
    props: { name: post.data.author },
  }));
}

const { author } = Astro.params;
const { name } = Astro.props;

const allPosts = await getCollection("blog");
const formattedPosts: CollectionEntry<"blog">[] = formatBlogPosts(allPosts);
const catPosts = formattedPosts.filter(
  (post) => slugify(post.data.author) === author
);
---

<MainLayout title={name}>
  <section class="container" aria-label={`Posts by ${name}`}>
    <h1 class="h1">Posts by <span>{name}</span></h1>
    <div class="post-container">
      {
        catPosts.map((post) => (
          <PostCard data={post.data} slug={post.slug} tagType="h2" />
        ))
      }
    </div>
  </section>
</MainLayout>
