---
// component import
import HeadLayout from "./HeadLayout.astro";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";

// styles import
import "../styles/global.css";

export interface Props {
  title: string;
  description?: string;
}
const { title = "Blog", description = "Codes and Life" } = Astro.props as Props;
---

<html lang="en">
  <HeadLayout {title} {description} />
  <body>
    <Nav />
    <main>
      <slot>Default Text</slot>
    </main>

    <Footer />
  </body>
</html>
